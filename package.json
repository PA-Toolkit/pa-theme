{
  "name": "pa-theme",
  "version": "1.0.0",
  "description": "A library for creating and editing Project Arrhythmia themes.",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "dev": "webpack --mode=development",
    "prod": "webpack --mode=production",
    "dev:watch": "webpack --mode=development --watch",
    "prod:watch": "webpack --mode=production --watch",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "jest --config ./jest.config.json"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "pa",
    "project arrhythmia",
    "theme"
  ],
  "author": "enchart",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enchart/pa-theme"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.71.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@types/color": "^3.0.3",
    "color": "^4.2.3"
  }
}
